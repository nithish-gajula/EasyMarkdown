<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.nithishgajula.easymarkdown.MarkdownEditorActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/editor_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/editor_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/rich_electric_blue"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/PopupMenuStyle"
                app:title="Editor"
                app:titleTextAppearance="@style/ToolbarTitleStyle"
                app:titleTextColor="@color/white" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/editor_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/gray_border"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:layout_marginVertical="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tabIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_tab_space"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_tab"
                        android:tooltipText="Tab Space"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/boldIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_bold"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_bold"
                        android:tooltipText="Bold"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/italicIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_italic"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_italic"
                        android:tooltipText="Italic"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/strikeIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_strike_through"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_strikethrough"
                        android:tooltipText="Strikethrough"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/headerIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_heading"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_heading"
                        android:tooltipText="Heading"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/quoteIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_quote"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_quote"
                        android:tooltipText="Block Quote"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/listIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_unordered_list"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_list"
                        android:tooltipText="UnOrdered List"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/codeIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_code"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_code"
                        android:tooltipText="Code"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/codeBlockIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_code_block"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_code_block"
                        android:tooltipText="Code Block"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/tableIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_table"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_table"
                        android:tooltipText="Table"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/horizontalRowIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_divider"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_horizontal_rule"
                        android:tooltipText="Divider"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/imgIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_image"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_image"
                        android:tooltipText="Image"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/linkIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_link"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_link"
                        android:tooltipText="Link"
                        app:tint="@color/icon_dark_tint" />

                    <ImageView
                        android:id="@+id/wordIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_margin="5dp"
                        android:contentDescription="@string/editor_word_count"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_word_count"
                        android:tooltipText="Word Count"
                        app:tint="@color/icon_dark_tint" />


                </LinearLayout>

            </HorizontalScrollView>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/editor_til"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                app:boxStrokeColor="@color/blue_jeans"
                app:placeholderText="Write your markdown content here...">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/markdown_editor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:imeOptions="actionSend"
                    android:inputType="textMultiLine"
                    android:textSize="18sp" />

                <requestFocus />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/drawer_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:fontFamily="monospace"
                android:textSize="15sp" />

        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>

